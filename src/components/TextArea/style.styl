.text-area-container
  label
    position: relative

  textarea
    font-size: inherit
    font-family: inherit
    line-height: 1.5em
    border: 1px solid lightGray
    padding: 20px
    padding-bottom: 15px
    width: 85%
    margin-bottom: 0.5em

  span
    position: absolute
    opacity: 0.6
    bottom: 45px;
    left: 15px
    cursor: text
    transition: all 0.5s ease-in-out


  textarea.has-value + span,
  textarea:focus + span,
  textarea:not(:invalid) + span
    opacity: 1
    transform: translate(-2px, -1.5em)
    font-size: 0.7em
    cursor: default
    padding-left: 5px
    margin-bottom: 15px

  svg 
    position: absolute;
    bottom: 45px;
    right: 25px;