.summary
  display: flex
  border-left: 1px solid primaryOpacity
  padding: 20px
  flex-direction: column
  justify-content: space-between
  .summary-upper
    h1
      color: primaryMain
    p 
      color: textGray
    .detail-info
      flex: 1
      margin-top: 20px
      padding-top: 20px
      border-top: 1px solid lightGray
      .green-text
        color: primaryGreen
      p
        padding: 5px
  .summary-bottom-grid
    display: grid
    grid-template-columns: 1fr 1fr
    grid-row-gap: 15px

.total
  color: primaryMain
  font-size: 22px

